<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
  </svg>
</button>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
          <li class="nav-item" role="presentation">
            <button
              class="nav-link active"
              id="pills-incomes-tab"
              data-bs-toggle="pill"
              data-bs-target="#pills-incomes"
              type="button"
              role="tab"
              aria-controls="pills-incomes"
              aria-selected="true"
            >
              収入
            </button>
          </li>
          <li class="nav-item" role="presentation">
            <button
              class="nav-link"
              id="pills-expenses-tab"
              data-bs-toggle="pill"
              data-bs-target="#pills-expenses"
              type="button"
              role="tab"
              aria-controls="pills-expenses"
              aria-selected="false"
            >
              支出
            </button>
          </li>
        </ul>
        <h5 class="modal-title" id="exampleModalLabel"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="tab-content" id="pills-tabContent">
        <div
          class="tab-pane fade show active"
          id="pills-incomes"
          role="tabpanel"
          aria-labelledby="pills-incomes-tab"
        >
          <%= render "new" %>
        </div>
        <div
          class="tab-pane fade"
          id="pills-expenses"
          role="tabpanel"
          aria-labelledby="pills-profile-tab"
        >
          支出Form<%# <%= render "expenses/new" %> 

         </div>  
      </div>
    </div>
  </div>
</div>
