<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

<div class="main">
  <div id='calendar' class="calendar"></div>
  <div class="list">
    <ul class="month-list">
      <div class="card w-75">
          <div id="date" class="card-header">
            日付表示
          </div>
        </div>
      <li>
        <div class="card w-75">
          <div class="card-header">
            収入
          </div>
          <ul id="income-list" class="list-group list-group-flush">
            <li class="list-group-item">1件目</li>
            <li class="list-group-item">2件目</li>
            <li class="list-group-item">3件目</li>
          </ul>
        </div>
      </li>
      <li>
        <div class="card w-75">
          <div class="card-header">
            支出
          </div>
          <ul id="expense-list" class="list-group list-group-flush">
            <li class="list-group-item">1件目</li>
            <li class="list-group-item">2件目</li>
          </ul>
        </div>
      </li>
    </ul>
  </div>
</div>

<!-- Button trigger modal -->
<button type="button" class="rounded-circle" data-bs-toggle="modal" data-bs-target="#exampleModal">
  <svg xmlns="http://www.w3.org/2000/svg" width="50" height="60" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
  </svg>
</button>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
          <li class="nav-item" role="presentation">
            <button
              class="nav-link active"
              id="pills-incomes-tab"
              data-bs-toggle="pill"
              data-bs-target="#pills-incomes"
              type="button"
              role="tab"
              aria-controls="pills-incomes"
              aria-selected="true"
            >
              収入
            </button>
          </li>
          <li class="nav-item" role="presentation">
            <button
              class="nav-link"
              id="pills-expenses-tab"
              data-bs-toggle="pill"
              data-bs-target="#pills-expenses"
              type="button"
              role="tab"
              aria-controls="pills-expenses"
              aria-selected="false"
            >
              支出
            </button>
          </li>
        </ul>
        <h5 class="modal-title" id="exampleModalLabel"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="tab-content" id="pills-tabContent">
        <div
          class="tab-pane fade show active"
          id="pills-incomes"
          role="tabpanel"
          aria-labelledby="pills-incomes-tab"
        >
          <%= render "new" %>
        </div>
        <div
          class="tab-pane fade"
          id="pills-expenses"
          role="tabpanel"
          aria-labelledby="pills-profile-tab"
        >

            <%= render "expense" %>
        </div>
        <div
          class="tab-pane fade"
          id="pills-expenses"
          role="tabpanel"
          aria-labelledby="pills-profile-tab"
        >
         </div>
      </div>
    </div>
  </div>
</div>

